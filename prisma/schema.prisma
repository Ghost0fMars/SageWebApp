datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             String   @id @default(cuid())
  email          String   @unique
  name           String?
  hashedPassword String?
  createdAt      DateTime @default(now())

  sequences Sequence[]
  tiles     Tile[]
}

model Sequence {
  id        String   @id @default(cuid())
  title     String   @unique // ðŸ‘ˆ AJOUTER Ã‡A
  content   Json
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  seances   Seance[]
  createdAt DateTime @default(now())
}

model Seance {
  id         String   @id @default(cuid())
  title      String
  subtitle   String?
  objectif   String
  consigne   String?
  detailed   String?
  position   String? 
  sequenceId String
  sequence   Sequence @relation(fields: [sequenceId], references: [id])
  tiles      Tile[]
}

model Tile {
  id        String   @id @default(cuid())
  userId    String
  titre     String
  objectif  String?
  position  String
  couleur   String?
  seanceId  String? // âœ… CorrigÃ© : mÃªme type que Seance.id
  createdAt DateTime @default(now())

  user   User    @relation(fields: [userId], references: [id])
  seance Seance? @relation(fields: [seanceId], references: [id])
}
