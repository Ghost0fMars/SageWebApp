datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             String     @id @default(cuid())
  email          String     @unique
  name           String?
  hashedPassword String?
  createdAt      DateTime   @default(now())

  sequences      Sequence[]
}

model Sequence {
  id        String   @id @default(cuid())
  title     String   @unique
  content   Json
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  seances   Seance[]
  createdAt DateTime @default(now())
}

model Seance {
  id         String   @id @default(cuid())
  title      String
  subtitle   String?
  objectif   String
  consigne   String?
  detailed   String?
  position   String?
  semaine    DateTime?
  sequenceId String
  sequence   Sequence @relation(fields: [sequenceId], references: [id])
}

model Eleve {
  id        String   @id @default(uuid())
  userId    String
  prenom    String
  nom       String
  dateNaissance String?
  parentNom String?
  parentTel String?
  parentEmail String?
  documents Json
  besoinsParticuliers Json
  notes     String?
  evaluations Json
}