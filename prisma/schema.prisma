datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             String     @id @default(cuid())
  email          String     @unique
  name           String?
  hashedPassword String?
  createdAt      DateTime   @default(now())

  sequences      Sequence[]
  tiles          Tile[]
}

model Sequence {
  id         String    @id @default(cuid())
  userId     String
  title      String
  content    Json
  createdAt  DateTime  @default(now())

  user       User      @relation(fields: [userId], references: [id])
  seances    Seance[]  
}

model Seance {
  id         Int       @id @default(autoincrement())
  sequenceId String    
  title      String
  objectif   String

  sequence   Sequence  @relation(fields: [sequenceId], references: [id]) 
  tiles      Tile[]    
}

model Tile {
  id         String   @id @default(cuid())
  userId     String
  titre      String
  objectif   String?
  position   String
  couleur    String?
  seanceId   Int?
  createdAt  DateTime @default(now())

  user       User     @relation(fields: [userId], references: [id])
  seance     Seance?  @relation(fields: [seanceId], references: [id]) 
}
