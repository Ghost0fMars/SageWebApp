generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Profil {
  id         String  @id @default(cuid())
  firstName  String
  lastName   String
  messagerie String?
  phone      String?
  subject    String?
  school     String?
  grade      String?
  bio        String?
  photoUrl   String?
  isVisible  Boolean @default(true)
  userId     String  @unique
  user       User    @relation(fields: [userId], references: [id])
}

model User {
  id             String     @id @default(cuid())
  email          String     @unique
  name           String?
  hashedPassword String?
  createdAt      DateTime   @default(now())
  profil         Profil?
  sequences      Sequence[]
}

model Sequence {
  id        String   @id @default(cuid())
  title     String   @unique
  content   Json
  userId    String
  createdAt DateTime @default(now())
  seances   Seance[]
  user      User     @relation(fields: [userId], references: [id])
}

model Seance {
  id         String    @id @default(cuid())
  title      String
  subtitle   String?
  objectif   String
  consigne   String?
  detailed   String?
  position   String?
  semaine    DateTime?
  sequenceId String
  sequence   Sequence  @relation(fields: [sequenceId], references: [id])
}

model Eleve {
  id                  String  @id @default(uuid())
  userId              String
  prenom              String
  nom                 String
  dateNaissance       String?
  parentNom           String?
  parentTel           String?
  parentEmail         String?
  documents           Json
  besoinsParticuliers Json
  notes               String?
  evaluations         Json
}
