// Exemple complet avec User, Seance et Sequence

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id              String   @id @default(cuid())
  email           String   @unique
  name            String?
  hashedPassword  String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  seances         Seance[]
  sequences       Sequence[]
}



model Seance {
  id        String   @id @default(cuid())
  titre     String
  objectif  String?
  consigne  String?
  domaine   String?
  couleur   String?
  position  String?
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model Sequence {
  id        String   @id @default(cuid())
  title     String
  content   Json
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}
