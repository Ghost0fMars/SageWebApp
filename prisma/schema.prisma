// Exemple complet avec User, Seance et Sequence

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             String     @id @default(cuid())
  email          String     @unique
  name           String?
  hashedPassword String?
  createdAt      DateTime   @default(now())

  sequences      Sequence[]
  tiles          Tile[]
}

model Sequence {
  id         String   @id @default(cuid())
  userId     String
  title      String
  content    Json     // âœ… On passe en Json au lieu de String pour stocker du JSON directement
  createdAt  DateTime @default(now())

  user       User     @relation(fields: [userId], references: [id])
}

model Tile {
  id         String   @id @default(cuid())
  userId     String
  titre      String
  objectif   String?
  position   String
  couleur    String?
  createdAt  DateTime @default(now())

  user       User     @relation(fields: [userId], references: [id])
}
